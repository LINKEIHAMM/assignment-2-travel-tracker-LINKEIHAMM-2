BoxLayout:
    orientation: 'vertical'
    title:"xx"
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Label:
                text: "Sort by:"
            Spinner:
                id: key_selection
                text: app.current_key
                values: app.columns
                on_text: app.change_state(self.text)
            Label:
                text: "Add New Place..."
            Label:
                text: "Name:"
            TextInput:
                id: title_input
                write_tab: False
            Label:
                text: "Country:"
            TextInput:
                id: category_input
                write_tab: False
            Label:
                text: "Priority:"
            TextInput:
                id: year_input
                write_tab: False
            Button:
                text: "Add Place"
                on_press: app.add_movie(title_input.text, year_input.text, category_input.text)
            Button:
                text: "Clear"
                on_press: app.clear_input()
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1, 0.1
                text: app.num_text
            BoxLayout:
                id: entries_box
                orientation: 'vertical'
            Label:
                text: app.status_text
                size_hint: 1, 0.1
